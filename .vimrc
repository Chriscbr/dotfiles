set nocompatible

set expandtab
set tabstop=2
set softtabstop=2
set shiftwidth=2

" Most of these are copied from defaults
set history=200
set backspace=indent,eol,start
set showcmd
set ruler
set wildmenu

set ttimeout
set ttimeoutlen=100

set display=truncate
set scrolloff=5

filetype plugin indent on

syntax on
