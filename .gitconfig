[core]
	excludesfile = ~/.gitignore_global
	editor = code --wait
  pager = delta

[delta]
    plus-color = "#012800"
    minus-color = "#340001"
    theme = 'Monokai Extended'
    features = unobtrusive-line-numbers decorations
    whitespace-error-style = 22 reverse

[delta "unobtrusive-line-numbers"]
    line-numbers = true
    line-numbers-minus-style = "#444444"
    line-numbers-zero-style = "#444444"
    line-numbers-plus-style = "#444444"
    line-numbers-left-format = "{nm:>4}"
    line-numbers-right-format = "{np:>4} "

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
    hunk-header-decoration-style = yellow ul 

[diff]
	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE

[alias]
	lg = log --graph --abbrev-commit --decorate --date=local --format=format:'%C(yellow)%h%C(reset) - %C(blue)%an <%ae>%C(reset) %C(magenta)%ad (%ar)%C(reset)%C(green)%d%C(reset)%n %C(white)%s%C(reset)' --all

[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED

[pull]
	# git pull should do a rebase after fetch instead of merge
	rebase = true

[rebase]
	autoStash = true
